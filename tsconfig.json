{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    // "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error",
    "outDir": "./dist/.types",
    "rootDir": "./src",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  }
}
